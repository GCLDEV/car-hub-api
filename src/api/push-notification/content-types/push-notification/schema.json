{
  "kind": "collectionType",
  "collectionName": "push_notifications",
  "info": {
    "singularName": "push-notification",
    "pluralName": "push-notifications",
    "displayName": "Push Notification",
    "description": "Push notification history"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "body": {
      "type": "text",
      "required": true
    },
    "recipient": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "sender": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "type": {
      "type": "enumeration",
      "enum": ["message_from_buyer", "message_from_seller"],
      "required": true
    },
    "data": {
      "type": "json"
    },
    "sentAt": {
      "type": "datetime",
      "default": "now"
    },
    "isRead": {
      "type": "boolean",
      "default": false
    }
  }
}