{
  "kind": "collectionType",
  "collectionName": "cars",
  "info": {
    "singularName": "car",
    "pluralName": "cars",
    "displayName": "Car",
    "description": "Car listings for the marketplace"
  },
  "options": {
    "draftAndPublish": false,
    "comment": ""
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "brand": {
      "type": "string",
      "required": true
    },
    "model": {
      "type": "string",
      "required": true
    },
    "year": {
      "type": "integer",
      "required": true,
      "min": 1990,
      "max": 2030
    },
    "price": {
      "type": "biginteger",
      "required": true,
      "min": 0
    },
    "km": {
      "type": "integer",
      "required": false,
      "min": 0
    },
    "fuelType": {
      "type": "enumeration",
      "enum": ["Gasoline", "Ethanol", "Flex", "Diesel", "CNG", "Hybrid", "Electric"],
      "required": false
    },
    "transmission": {
      "type": "enumeration",
      "enum": ["Manual", "Automatic", "CVT", "Automated"],
      "required": false
    },
    "category": {
      "type": "enumeration",
      "enum": ["Sedan", "Hatchback", "SUV", "Pickup", "Wagon", "Coupe", "Convers√≠vel", "Minivan", "Crossover", "Compact"],
      "required": true
    },
    "color": {
      "type": "string",
      "required": false
    },
    "description": {
      "type": "text",
      "required": false
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "location": {
      "type": "string",
      "required": true
    },
    "cityState": {
      "type": "string",
      "required": true
    },
    "views": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "engine": {
      "type": "string",
      "required": false
    },
    "doors": {
      "type": "integer",
      "required": false,
      "min": 2,
      "max": 5
    },
    "seats": {
      "type": "integer", 
      "required": false,
      "min": 2,
      "max": 8
    },
    "features": {
      "type": "json"
    },
    "specs": {
      "type": "json"
    },
    "seller": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "cars"
    },
    "favorites": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::favorite.favorite",
      "mappedBy": "car"
    },
    "messages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::message.message",
      "mappedBy": "car"
    }
  }
}